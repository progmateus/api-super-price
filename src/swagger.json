                "responses":{
                    "200":{
                        "description": "OK"
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "404":{
                        "description": "User does not exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/password/reset":{
            "post":{
                "summary": "Reset password",
