    "paths":{
        "/users":{
            "post":{
                "summary": "Create User",
                "description": "Route to create a user",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type": "string"
                                    },
                                    "lastname":{
                                        "type": "string"
                                    },
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "409":{
                        "description": "User already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            },
            "put":{
                "summary": "Update User",
                "description": "Route to update a user",
                "tags": ["Users"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type": "string"
                                    },
                                    "lastname":{
                                        "type": "string"
                                    },
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    },
                                    "last_password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Updated"
                    },
                    "400": {
                        "description": "Invalid information sended"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "User does not exists"
                    },
                    "409":{
                        "description": "User already exists!"
                    },
                    "422":{
                        "description": "Information missing"
                    },
                    "500": {
                        "description": "Internal server Error"
                    }
                }
            }
        },
        "/users/email":{
            "get":{
                "description": "Verify email",
                "summary": "verify if email already been used",
                "tags": ["Users"],
                "produces": ["application/json"],
                "parameters":[{
                    "name": "email",
                    "in": "query",
                    "description": "email to search",
                    "required": true,
                    "type": "string"
                }],
                "responses":{
                    "200":{
                        "description": "Email already exists"
                    },
                    "404":{
                        "description": "User not found"
                    },
                    "400":{
                        "description": "Invalid email format"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/sessions":{
            "post":{
                "summary": "Authentication user",
                "description": "Authentication user",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "properties":{
                                        "token":{
                                            "type": "string"
                                        },
                                        "user":{
                                            "type": "object",
                                            "properties":{
                                                "id":{
                                                    "type": "string"
                                                },
                                                "email":{
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "refresh_token":{
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "401":{
                        "description": "Email or password incorrect"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/users/avatar":{
            "patch":{
                "summary": "Upload user avatar",
                "description": "Upload avatar User",
                "tags": ["Users"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "multipart/form-data":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "avatar":{
                						"type": "file"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "204":{
                        "description": "OK"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/password/forgot":{
            "post":{
                "summary": "Send forgot password mail",
                "description": "Send forgot password mail to user",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
