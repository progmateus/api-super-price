                                "properties":{
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }, "responses":{
                    "200":{
                        "description": "Ok"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/products":{
