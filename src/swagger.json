            }
        },
        "/products/{id}":{
                "delete": {
                    "description": "delete product by id",
                    "summary": "delete product by id",
                    "tags": ["Products"],
                    "security":[{"bearerAuth": []}],
                    "produces": ["application/json"],
                    "parameters":[{
                        "name": "id",
