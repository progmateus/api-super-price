        "/prices":{
            "post":{
                "summary": "Create Price",
                "description": "Route to create a price",
                "tags": ["Prices"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "supermarket_name":{
                                        "type": "string"
                                    },
                                    "gtin":{
